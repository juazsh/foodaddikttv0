generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid()) @map("_id")
  createdAt  DateTime @default(now())
  username   String   @unique
  name       String?
  arabicName String?
}

model Owner {
  id         String   @id @default(uuid()) @map("_id")
  createdAt  DateTime @default(now())
  username   String   @unique
  name       String?
  arabicName String?
  stores     Store[]
}

model Store {
  id               String              @id @default(uuid()) @map("_id")
  createdAt        DateTime            @default(now())
  belongsToId      String
  belongsTo        Owner               @relation(fields: [belongsToId], references: [id])
  name             String
  arabicName       String?
  address          Address
  arabicAddress    Address?
  searchTags       String[]
  arabicSearchTags String[]
  location         LocationCoordinates
  images           String[]
  menu             MenuItem[]
}

type LocationCoordinates {
  type        String
  coordinates Float[]
}

model MenuItem {
  id                String       @id @default(uuid()) @map("_id")
  createdAt         DateTime     @default(now())
  ofStoreId         String
  ofStore           Store        @relation(fields: [ofStoreId], references: [id])
  name              String
  arabicName        String?
  description       String
  arabicDescription String?
  price             Float
  category          Category
  review            ItemReview[]
  images            String[]
}

enum Category {
  MEDETERIAN
  AMERICAN
  SWEET
}

type ItemReview {
  createdAt     DateTime @default(now())
  username      String
  comment       String?
  arabicComment String?
  rating        Int
}

type Address {
  street String
  city   String
  state  String
  zip    String
}

model AccessRequest {
  id        String   @id @default(uuid()) @map("_id")
  createdAt DateTime @default(now())
  username  String   @unique
  code      Int
}
